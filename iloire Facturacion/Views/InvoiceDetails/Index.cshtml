@model IEnumerable<SmsFeedback_EFModels.InvoiceDetails>

@{
    ViewBag.Title = "Index";
}


<table class="zebra-striped">
    <thead>
        <th>
            Article
        </th>
        <th width="40">
            Qty
        </th>
        <th width="70">
            Price
        </th>
        <th width="70">
            SubTotal
        </th>
        <th width="50">
            VAT
        </th>
         <th width="80">
          Total
        </th> 
        @if (ViewBag.Print != true){
        <th width="100"></th>
        }
    </thead>

@foreach (var item in Model) {
    var invoiceDetail = "invoiceDetail" + item.InvoiceDetailsID; 
    <tr id="@invoiceDetail">
        <td>
            @Html.DisplayFor(modelItem => item.Article)
        </td>
        <td nowrap>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td nowrap>
            @String.Format("{0:0.00} {1}", item.Price, ViewBag.Currency)
        </td>
       
         <td nowrap>
            @String.Format("{0:0.00} {1}", item.Total, ViewBag.Currency)
        </td>
         <td nowrap>
            @Html.DisplayFor(modelItem => item.VAT)%
        </td>
         <td nowrap>
            @String.Format("{0:0.00} {1}", item.TotalPlusVAT, ViewBag.Currency)
        </td>
        @if (ViewBag.Print != true)
        {
        <td nowrap>
            @Html.ActionLink("Edit", "Edit", new { id = item.InvoiceDetailsID }, new { idInvoiceDetails = item.InvoiceDetailsID, @class = "btn primary small editInvoiceDetails" }) 
         @*   @Html.ActionLink("Details", "Details", new { id=item.InvoiceDetailsID }, new { @class = "btn"}) |*@
            @Html.ActionLink("Delete", "Delete", new { id = item.InvoiceDetailsID }, new { idInvoiceDetails = item.InvoiceDetailsID, @class = "btn small deleteInvoiceDetails" })
        </td>
        }
    </tr>
}

    <tfoot>
        <tr>
            <td><span class="label">TOTALS: </span></td>
            <td>@Model.Sum(i=>i.Quantity)</td>
            <td>-</td>
            <td>@String.Format("{0:0.00} {1}", Model.Sum(i => i.Total), ViewBag.Currency)</td>
            <td>-</td>
            <td>@String.Format("{0:0.00} {1}", Model.Sum(i => i.TotalPlusVAT), ViewBag.Currency)</td>
            @if (ViewBag.Print != true){
            <td></td>
            }
        </tr>
    </tfoot>

</table>


<table class="InvoiceFooterTotals">
        <tr>
            <td colspan="5" class="title">@Resources.Print.Invoice_SubTotal:</td>
            <td width="200" class="value">@String.Format("{0:0.00} {1}", Model.Sum(i=>i.Total), ViewBag.Currency)</td>
        </tr>
        @if ((ViewBag.IsProposal!=null) && !ViewBag.IsProposal)
        {
        <tr>
            <td colspan="5" class="title">@Resources.Print.Invoice_VAT:</td>
            <td width="200" class="value">@String.Format("{0:0.00} {1}", Model.Sum(i => i.VAT), ViewBag.Currency)</td>
        </tr>

        if (ViewBag.Invoice != null)
        {
            var invoice = ViewBag.Invoice as SmsFeedback_EFModels.Invoice;

            if (invoice.AdvancePaymentTaxAmount > 0)
            { 
        <tr>
            <td colspan="5" class="title">@Resources.Print.Invoice_AdvancePaymentTax (*):</td>
            <td class="value">- @String.Format("{0:0.00} {1}", invoice.AdvancePaymentTaxAmount, ViewBag.Currency)</td>
        </tr>
            }
         <tr>
            <td colspan="5" class="title">@Resources.Print.Invoice_TotalToPay: </td>
            <td class="value">@String.Format("{0:0.00} {1}", invoice.TotalToPay, ViewBag.Currency)</td>
        </tr>
        }
        }
</table>