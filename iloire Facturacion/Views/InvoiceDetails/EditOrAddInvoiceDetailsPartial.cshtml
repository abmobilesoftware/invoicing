@model SmsFeedback_EFModels.InvoiceDetails
           

<fieldset>
        @Html.HiddenFor(model => model.InvoiceDetailsID)
         @Html.Hidden("InvoiceInvoiceID", Model.InvoiceInvoiceId)
   

        <div class="clearfix">
            @Html.LabelFor(model => model.Article)
        
        <div class="input">
            @Html.EditorFor(model => model.Article)
            @Html.ValidationMessageFor(model => model.Article)
        </div>
		</div>

        <div class="clearfix">
            @Html.LabelFor(model => model.Quantity)
        
        <div class="input">
            @Html.EditorFor(model => model.Quantity, "Number")
            @Html.ValidationMessageFor(model => model.Quantity)
        </div>
		</div>

        <div class="clearfix">
            @Html.LabelFor(model => model.Price)
        
        <div class="input">
            @Html.EditorFor(model => model.Price, "Currency")
            @Html.ValidationMessageFor(model => model.Price)
        </div>
		</div>


        <div class="clearfix">
            @Html.LabelFor(model => model.VAT)
        
        <div class="input">
            @Html.EditorFor(model => model.VAT, (string)ViewBag.DefaultVAT) %
            @Html.ValidationMessageFor(model => model.VAT)
        </div>
		</div>

        @Html.HiddenFor(model => model.DateCreated)
 
		<div class="actions">
            <input type="submit" class="btn primary" value="Save" />
            <input type="button" class="btn closeModal" value="Close window" /> 
        </div>
    </fieldset>