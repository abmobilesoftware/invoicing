@model SmsFeedback_EFModels.Invoice

@{
   ViewBag.Title = "FAC" + Model.DateCreated.ToString("yyyy") + "-" + Model.InvoiceNumber + " " + Model.Name + " " + Model.Company.Name;
   ViewBag.Invoicename = "FAC" + Model.DateCreated.ToString("yyyy") + "-" + Model.InvoiceNumber;
    Layout = "~/Views/Shared/_LayoutPrint.cshtml";
    
}

<table class="invoiceHeader">
<tr>
<td>
 <img src="@Url.Content("~/Content/images/06-web-2_225.png")" height="55" style="float:left;" />
</td>
<td style="text-align:right">
 <h2>@Resources.Print.Invoice_Number</h2> 
  @Model.InvoiceNumber / @Model.DateCreated.ToLongDateString()
</td>
</tr>
</table>

<div class="from">
    <blockquote>
    <p>    <strong>
    @ViewBag.MyCompany
    </strong>
    </p>

    <p>
    @Html.Raw(ViewBag.MyCompanyAddress.Replace(";","<br/>"))
    </p>    
   <p>
    @Resources.Print.CompanyJ: @ViewBag.MyCompanyJ
    </p>
    <p>
    @Resources.Print.VatID: @ViewBag.VatID
    </p>
    <p>
    @Resources.Print.Bank: @ViewBag.Bank
    </p>
    <p>
    @Resources.Print.BankAccount: @ViewBag.MyBankAccount
    </p>
    <p>
    @Resources.Print.Invoice_SwiftNumber: @ViewBag.Invoice_SwiftNumber
    </p>
    </blockquote>
</div>

 <table>
 <tr>
    <td width="80%">
            <h3>@Resources.Print.Invoice_To :</h3>
            <blockquote>
            <p>
                <strong>
                    @Html.DisplayFor(model => model.Company.Name)
                </strong>
            </p>

            <p>
                @Resources.Print.Invoice_CompanyNumber:
                <strong>
                    @Html.DisplayFor(model => model.Company.VATID)
                </strong>
            </p>
             <p>
                @Resources.Print.Office: @Html.DisplayFor(model => model.Company.Address)
            </p>

             <p>               
                @Html.DisplayFor(model => model.Company.City)
            </p>	 
              <p>
               @Resources.Print.Bank:               
               @Html.DisplayFor(model => model.Company.Bank)
            </p>	     
            </blockquote>
    </td>   
 </tr>
 </table>
<table class="zebra-striped">
    <thead>
        <th>
            @Resources.Print.Invoice_Item
        </th>
        <th width="40">
            @Resources.Print.Invoice_Qty
        </th>
        <th width="75">
            @Resources.Print.Invoice_Price
        </th>
        <th width="80">
            @Resources.Print.Invoice_SubTotal
        </th>
        <th width="80">
            @Resources.Print.Invoice_VAT
        </th>
         <th width="100">
          @Resources.Print.Invoice_Total
        </th> 
        @if (ViewBag.Print != true){
        <th width="100"></th>
        }
    </thead>
@foreach (var item in Model.InvoiceDetails) {
    var invoiceDetail = "invoiceDetail" + item.InvoiceDetailsID; 
    <tr id="@invoiceDetail">
        <td>
            @Html.DisplayFor(modelItem => item.Article)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @String.Format("{0:0.00} {1}", item.Price, Model.Currency)
        </td>
       
         <td>
            @String.Format("{0:0.00} {1}", item.Total,  Model.Currency)
        </td>
         <td>
            @String.Format("{0:0.00} {1}", item.VATAmount,  Model.Currency)
        </td>
         <td>
            @String.Format("{0:0.00} {1}", item.TotalPlusVAT,  Model.Currency)
        </td>
    </tr>
}
    <tfoot>
        <tr>
         <td class="invoiceFooterTitle">@Resources.Print.Invoice_SubTotal:</td>
            <td>@Model.InvoiceDetails.Sum(i=>i.Quantity)</td>
            <td>-</td>
            <td>@String.Format("{0:0.00} {1}", Model.NetTotal, Model.Currency)</td>
            <td>@String.Format("{0:0.00} {1}", Model.VATAmount, Model.Currency)</td>
            <td>@String.Format("{0:0.00} {1}", Model.TotalWithVAT, Model.Currency)</td>           
        </tr>
    </tfoot>
</table>

<table>

            <tr>
            <td colspan="5" class="invoiceFooterTitle">@Resources.Print.Invoice_SubTotal:</td>
            <td width="200" class="invoiceFooterValue">@String.Format("{0:0.00} {1}", Model.NetTotal, Model.Currency)</td>
        </tr>
        <tr>
            <td colspan="5" class="invoiceFooterTitle">@Resources.Print.Invoice_VAT:</td>
            <td width="200" class="invoiceFooterValue">@String.Format("{0:0.00} {1}", Model.VATAmount, Model.Currency)</td>
        </tr>

        @if (Model.AdvancePaymentTaxAmount > 0)
        {
        <tr>
            <td colspan="5" class="invoiceFooterTitle">@Resources.Print.Invoice_AdvancePaymentTax (*):</td>
            <td class="invoiceFooterValue">- @String.Format("{0:0.00} {1}", Model.AdvancePaymentTaxAmount, Model.Currency)</td>
        </tr>
        }

         <tr>
            <td colspan="5" class="invoiceFooterTitle">@Resources.Print.Invoice_TotalToPay: </td>
            <td class="invoiceFooterValueTotal">@String.Format("{0:0.00} {1}", Model.TotalToPay, Model.Currency)</td>
        </tr>
</table>

<div class="invoiceFooter">
    <table>
    <tr>
       <td>
           @Html.Raw(@Resources.Print.Invoice_Footer.Replace(Environment.NewLine, "<br/>"))
       </td>
    </tr>
    </table>
    

</div>
