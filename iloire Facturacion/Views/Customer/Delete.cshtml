@model SmsFeedback_EFModels.Company

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Company</h2>


<div class="alert-message warning">
  <a class="close" href="#">×</a>
  <p><strong>Are you sure you want to delete this Company?</strong></p>
</div>

<fieldset>
    <legend>Company</legend>
  <p>
        <strong>Name: </strong>
		@Html.DisplayFor(model => model.Name)
  </p>
  <p>
        <strong>VATID: </strong>
		@Html.DisplayFor(model => model.VATID)
  </p>
  <p>
        <strong>Address: </strong>
		@Html.DisplayFor(model => model.Address)
  </p>
  <p>
        <strong>Zip Code: </strong>
		@Html.DisplayFor(model => model.PostalCode)
  </p>
  <p>
        <strong>City: </strong>
		@Html.DisplayFor(model => model.City)
  </p>
 
</fieldset>
@using (Html.BeginForm()) {
	<div class="actions">
            <input type="submit" class="btn primary" value="Delete" />
			@Html.ActionLink("Back to List", "Index", null, new { @class = "btn"})
    </div>
}
